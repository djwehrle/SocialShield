@{
    ViewBag.Title = "Schools";
}

@section styles {
    @Styles.Render("~/Content/DataTables/css/dataTables.bundle")
}

<h2>@ViewBag.Title</h2>

<h3>Your Schools</h3>

<table id="userSchools" class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Name</th>
        </tr>
    </thead>
</table>

<h3>All Schools</h3>

<table id="allSchools" class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address Line 1</th>
            <th>Address Line 2</th>
            <th>City</th>
            <th>State</th>
            <th>ZIP</th>
        </tr>
    </thead>
</table>

@section scripts {
    @Scripts.Render("~/bundles/dataTables")
    @Scripts.Render("~/Scripts/Schools/index.js")
}